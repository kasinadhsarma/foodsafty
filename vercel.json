{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/wsgi.py"
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.10",
        "maxLambdaSize": "15mb",
        "excludeFiles": "*.{csv,ipynb}",
        "buildCommand": "pip install -r backend/requirements.txt && apt-get update && apt-get install -y postgresql postgresql-contrib"
      }
    }
  ]
}
